#!/usr/bin/env sh

# TODO: Integrate this into the config itself.
packages="bling inspect rubato fzy"

case "$1" in
  --install|-i) 
    for package in $packages; do
      set -x
      luarocks --local --server=https://luarocks.org/dev install "$package"
    done
    ;;
  --help|-h)
    echo './.dependencies.sh --[_|install]'
    ;;
  *)
    echo './.dependencies.sh --[_|install]'
    for package in $packages; do
      echo "$package"
    done
    ;;
esac
